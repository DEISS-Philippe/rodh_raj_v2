{% macro displaySpecialButton(choiceArray, isItem) %}
    {% for choice in choiceArray %}
        <div class="room_choice bckg-grey
        {% if isItem == true %}
            {% if choice.hasItem == true %}
                bckg-green
                {% else %}
                displayNone
            {% endif %}
        {% endif %}">
            <a href="{{ path('donjon_vanilla_process', {'id': choice.resultRoomAction.binderToken(app.user)}) }}" class="full_link"></a>
            <div class="fl">
                <img src="{{ asset('assets/images/fleche.png') }}" alt="">
            </div>
            <div class="room_choice_txt">
                {{ choice.text }}
            </div>
        </div>
    {% endfor %}
{% endmacro %}
